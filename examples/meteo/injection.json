{
    "type": "index_hadoop",
    "spec": {
        "ioConfig": {
            "type": "hadoop",
            "inputSpec": {
                "type": "static",
                "paths": "/home/guillaume/dev/druid-injection-csv-minimal/meteo/data.csv"
            }
        },
        "dataSchema": {
            "dataSource": "meteo",
            "granularitySpec": {
                "type": "uniform",
                "segmentGranularity": "day",
                "queryGranularity": "none",
                "intervals": [
                    "2014-07-01/2015-07-01"
                ]
            },
            "parser": {
                "type": "hadoopyString",
                "parseSpec": {
                    "format": "csv",
                    "timestampSpec": {
                        "format": "yyyy-mm-dd",
                        "column": "date"
                    },
                    "columns": [
                        "date",
                        "temperature",
                        "precipitation"
                    ],
                    "dimensionsSpec": {
                        "dimensions": [
                            "temperature",
                            "precipitation"
                        ]
                    }
                }
            },
            "metricsSpec": [
                {
                    "name": "count",
                    "type": "count"
                }
            ]
        },
        "tuningConfig": {
            "type": "hadoop",
            "partitionsSpec": {
                "type": "hashed",
                "targetPartitionSize": 5000000
            },
            "jobProperties": {}
        }
    }
}
