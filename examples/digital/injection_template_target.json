{
    "type": "index_hadoop",
    "spec": {
        "ioConfig": {
            "type": "hadoop",
            "inputSpec": {
                "type": "static",
                "paths": "APATHTOSUB/data.csv"
            }
        },
        "dataSchema": {
            "dataSource": "conversion",
            "granularitySpec": {
                "type": "uniform",
                "segmentGranularity": "day",
                "queryGranularity": "none",
                "intervals": [
                    "2015-11-04/2017-11-04"
                ]
            },
            "parser": {
                "type": "hadoopyString",
                "parseSpec": {
                    "format": "csv",
                    "timestampSpec": {
                        "format": "auto",
                        "column": "date"
                    },
                    "columns": [
                        "user",
                        "date",
                        "device",
                        "power"
                    ],
                    "dimensionsSpec": {
                        "dimensions": [
                        "user",
                        "device",
                        "power"
                        ]
                    }
                }
            },
            "metricsSpec": [
                {
                    "name": "count",
                    "type": "count"
                }
            ]
        },
        "tuningConfig": {
            "type": "hadoop",
            "partitionsSpec": {
                "type": "hashed",
                "targetPartitionSize": 5000000
            },
            "jobProperties": {}
        }
    }
}
